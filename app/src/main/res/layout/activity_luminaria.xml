<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/vinilo3"
    android:padding="5dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/ajustes" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/title_luminaria"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:id="@+id/txt_lumi_name"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cocina"
            android:textSize="17dp"
            android:id="@+id/txt_lumi_Ubica1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="1"
            android:baselineAligned="false">

            <Switch
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:padding="10dp"
                android:id="@+id/switch1"
                android:gravity="center"
                android:checked="false"
                android:layout_marginLeft="70dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="OFF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:id="@+id/imageView1"
                android:layout_marginLeft="73dp"
                android:src="@drawable/off" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cuarto 1"
            android:textSize="17dp"
            android:id="@+id/txt_lumi_Ubica2"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:baselineAligned="false">

            <Switch
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="OFF"
                android:padding="10dp"
                android:id="@+id/switch2"
                android:gravity="center"
                android:checked="false"
                android:layout_marginLeft="70dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textOff="Enc"
                android:textOn="Apa" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:id="@+id/imageView2"
                android:layout_marginLeft="73dp"
                android:src="@drawable/off" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sala"
            android:textSize="17dp"
            android:id="@+id/txt_lumi_Ubica3"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:baselineAligned="false">

            <Switch
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="OFF"
                android:padding="10dp"
                android:id="@+id/switch3"
                android:gravity="center"
                android:checked="false"
                android:layout_marginLeft="70dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:id="@+id/imageView3"
                android:layout_marginLeft="73dp"
                android:src="@drawable/off" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pasillo"
            android:textSize="17dp"
            android:id="@+id/txt_lumi_Ubica4"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:baselineAligned="false">

            <Switch
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="OFF"
                android:padding="10dp"
                android:id="@+id/switch4"
                android:gravity="center"
                android:checked="false"
                android:layout_marginLeft="70dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:id="@+id/imageView4"
                android:layout_marginLeft="73dp"
                android:src="@drawable/off" />


        </LinearLayout>

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            android:visibility="invisible" />
    </ScrollView>
</LinearLayout>
