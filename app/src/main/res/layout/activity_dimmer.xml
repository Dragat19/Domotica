<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vinilo3"
    android:padding="20dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_dimmer"
        android:id="@+id/txt_nombre"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="274dp"
        android:layout_height="170dp"
        android:id="@+id/imageView_dimmer"
        android:layout_gravity="center_horizontal"
        android:baselineAlignBottom="false"
        android:src="@drawable/nivel1_md"
        android:layout_weight="0.06" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:textSize="25dp"
        android:id="@+id/status"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="30dp"
        android:max="10"
        android:indeterminate="false"
        android:soundEffectsEnabled="true"
        android:scrollbarThumbHorizontal="@color/colorPrimary" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/toggleBtn"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/boton_on_off"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:contextClickable="false"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Apagado"
            android:id="@+id/textV_extra"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="30dp" />
    </LinearLayout>



    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/webView_dimmer"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />


</LinearLayout>