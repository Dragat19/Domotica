<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ejemplo.domotica.MainActivity"
    android:padding="@dimen/activity_horizontal_margin"
    android:transitionGroup="false"
    android:background="@drawable/vinilo3">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="false">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btntug"
            android:drawableStart="@drawable/btntug" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ON/OFF TUG"
            android:id="@+id/textView"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:textColor="#263238"
            android:textStyle="normal|bold"
            android:autoText="false"
            android:contextClickable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true"
            android:elegantTextHeight="false"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout2">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnluminaria"
            android:drawableStart="@drawable/btnbombillo"
            android:nestedScrollingEnabled="true"
            android:onClick="HOLA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LUMINARIA"
            android:id="@+id/textView2"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:textColor="#263238"
            android:textStyle="normal|bold"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout3">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btndimmer"
            android:drawableStart="@drawable/btndimer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DIMMER"
            android:id="@+id/textView3"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:textColor="#263238"
            android:textStyle="normal|bold"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnaire"
            android:drawableStart="@drawable/btnaire" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A/A"
            android:id="@+id/textView5"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:textColor="#263238"
            android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>
